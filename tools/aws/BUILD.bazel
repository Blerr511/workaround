sh_binary(
    name = "aws.configure",
    srcs = ["aws_configure.sh"],
    env = {
        "AWS_CONFIG_FILE": "$(AWS_CONFIG_FILE)",
        "AWS_SHARED_CREDENTIALS_FILE": "$(AWS_SHARED_CREDENTIALS_FILE)",
        "AWS_DEFAULT_REGION": "$(AWS_DEFAULT_REGION)",
        "AWS_ACCESS_KEY_ID": "$(AWS_DEFAULT_ACCESS_KEY_ID)",
        "AWS_ACCESS_KEY_SECRET": "$(AWS_DEFAULT_ACCESS_KEY_SECRET)",
        "KUBECONFIG": "$(KUBE_CONFIG)",
    },
    toolchains = [
        "//sandbox:aws_env_vars",
        "//sandbox:workspace_env_vars",
    ],
)

sh_binary(
    name = "aws",
    srcs = ["aws.sh"],
    env = {
        "AWS_CONFIG_FILE": "$(AWS_CONFIG_FILE)",
        "AWS_SHARED_CREDENTIALS_FILE": "$(AWS_SHARED_CREDENTIALS_FILE)",
        "AWS_DEFAULT_REGION": "$(AWS_DEFAULT_REGION)",
        "KUBECONFIG": "$(KUBE_CONFIG)",
    },
    toolchains = [
        "//sandbox:aws_env_vars",
        "//sandbox:workspace_env_vars",
    ],
)

sh_binary(
    name = "eksctl",
    srcs = ["eksctl.sh"],
    env = {
        "AWS_CONFIG_FILE": "$(AWS_CONFIG_FILE)",
        "AWS_SHARED_CREDENTIALS_FILE": "$(AWS_SHARED_CREDENTIALS_FILE)",
        "AWS_DEFAULT_REGION": "$(AWS_DEFAULT_REGION)",
        "KUBECONFIG": "$(KUBE_CONFIG)",
    },
    toolchains = [
        "//sandbox:aws_env_vars",
        "//sandbox:workspace_env_vars",
    ],
)

sh_binary(
    name = "ec2.ssh",
    srcs = ["ssh.sh"],
    env = {
        "AWS_SHARED_CREDENTIALS_FILE": "$(AWS_SHARED_CREDENTIALS_FILE)",
        "AWS_CONFIG_FILE": "AWS_CONFIG_FILE",
        "AWS_DEFAULT_REGION": "AWS_DEFAULT_REGION",
        "SSH_KEY": "$(AWS_EC2_SSH_KEY_PATH)",
        "INSTANCE": "$(AWS_EC2_INSTANCE_SSH_PATH)",
    },
    toolchains = ["//sandbox:aws_env_vars"],
